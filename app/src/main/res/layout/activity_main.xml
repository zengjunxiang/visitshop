<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/root_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent">

    <include
        android:id="@+id/title_up_layout"
        layout="@layout/title_bar_activity"/>

    <include
        android:id="@+id/layout_menu_bottom"
        layout="@layout/title_bottom_layout"/>

   <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_menu_bottom"
        android:layout_below="@id/title_up_layout"
        android:layout_gravity="center"
        android:background="@color/gray_bg"/>

</RelativeLayout>
